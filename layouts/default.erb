    <script src="/js/sevenup.js" type="text/javascript"></script>
    <script src="/js/sevenup_black.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
    <script src="/js/jquery-timeago.js" type="text/javascript"></script>
    <script src="/js/date.js" type="text/javascript"></script>
    <script src="/js/feeds.js" type="text/javascript"></script>
    <script src="/js/hyphenator.js" type="text/javascript"></script>
    <script src="/js/init.js" type="text/javascript"></script>
    <script src="/js/search.js" type="text/javascript"></script>
		<script src="/js/bootstrap.js" type="text/javascript"></script>
	</head>
	<body>
			<% if @item[:permalink] == 'home' then %>
				<%= render 'header' %>
        <div class="container">
          <%= yield %>
        </div>
			<% else %>
				<%= render 'header', :item => @item %>
        <div class="container">
				<article class="page">
					<%= render 'page_meta', :item => @item %>
					<section id="body-text" class="hyphenate">
						<%= yield %>
					</section>
				</article>
					<% if @item[:type] == 'article' %>
						<%= render 'legacy_comments', :item => @item if @item[:comments] %>
						<%= render 'comments', :item => @item %>
          <% end %>
        </div>
			<% end %>
			<footer>
				<section>
          <p>H3RALD Web Site v8.3 &copy; 2004 &mdash; <%= Time.now.strftime("%Y") %> <em>Fabio Cevasco</em></p>
				</section>
			</footer>
